<div class="shadow rounded">
    <div class="p-2">
        <form autocomplete="off">
            <div class="mb-1 row">
                <div class="col-11 text-center ui-widget p-1">
                    <input type="text" id="tags" placeholder="Search Recipe" class="form-control" name="recipe" />
                </div>
                <div class="col-1 p-1">
                    <button type="submit" class="btn btn-sm btn-success p-2">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $( function() {
      var availableTags = [
        "Ananas","Blackberry","Watermelon","Mango","Orange","Grape","Pizza","Cake","Hamburger","Pasta","Salad","Sausage","Chicken","Kebab","Chocolate","Seafood","Sushi","Ice cream"
      ];
      $( "#tags" ).autocomplete({
        source: availableTags,
        minLength: 2
      });
    } );
</script>