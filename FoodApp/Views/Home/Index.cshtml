@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row shadow rounded">
        <div class="col-ms-12 col-md-6 col-lg-6 col-xl-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active">
                        <img src="/Images/carouselImages/AirFryerPotatoes.jpg" 
                        class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item">
                        <img src="/Images/carouselImages/KoreanSpicy RamenwithBeef Hearty.jpg"
                        class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item">
                        <img src="/Images/carouselImages/Pizza.jpg"
                        class="d-block w-100 h-100" alt="Recipes">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-ms-12 col-md-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                <h2>The Best <span class="text-success fst-italic">Food</span> From
                 <span class="text-success">The Best Restaurants.</span></h2>
            </div>
            <div class="mb-3 p-3">
                <span><i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-black-dark fst-italic">Freash Food</span>
            </div>
            <div class="mb-3 p-3">
                <span><i class="fa-solid fa-wheat-awn text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-black-dark fst-italic">Healthy Meal</span>
            </div>
            <div class="mb-3 p-3">
                <span><i class="fa-solid fa-person-biking text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-black-dark fst-italic">Fastest Delivery</span>
                <p class="py-2"> We Promise Deliver Order within 20 minutes</p>
            </div>
        </div>
    </div>
</div>
